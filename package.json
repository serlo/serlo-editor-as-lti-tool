{
  "name": "serlo-editor-lti-tool",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "docker:run": "docker run -p 3000:3000 -d --env-file .env-template --add-host=host.docker.internal:host-gateway local-build",
    "start": "node --loader=ts-node/esm src/backend/index.ts",
    "start:dev": "nodemon --watch src --ext ts,tsx -exec 'node --loader=ts-node/esm src/backend/index.ts' --delay 3",
    "lint": "tsc --noEmit",
    "push-image": "yarn node --loader=ts-node/esm push-image.ts",
    "push-image:dev": "yarn push-image dev",
    "push-image:latest": "yarn push-image latest",
    "start:mongodb": "sudo systemctl start mongod",
    "stop:mongodb": "sudo systemctl stop mongod",
    "helper:resolve-mongodb-issue": "sudo rm -rf /tmp/mongodb-27017.sock",
    "helper:clear-mongodb": "mongosh --eval 'use test; db.dropDatabase();'"
  },
  "author": "Serlo Education e.V.",
  "license": "MIT",
  "dependencies": {
    "@serlo/editor": "0.7.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fp-ts": "2.16.6",
    "io-ts": "^2.2.21",
    "jsonwebtoken": "9.0.2",
    "ltijs": "^5.9.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "9.0.6",
    "@types/ltijs": "4.0.11",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "nodemon": "^3.1.3",
    "vite": "^5.2.0"
  },
  "engines": {
    "node": "20.13.1"
  }
}
